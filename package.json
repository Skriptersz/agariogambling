{
  "name": "p2p-agar-arena",
  "version": "1.0.0",
  "description": "P2P Money-Match Agar Arena",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:client": "npm run build -w @agar/client",
    "build:server": "npm run build -w @agar/server",
    "build:game": "npm run build -w @agar/game-server",
    "build:shared": "npm run build -w @agar/shared",
    "dev:server": "npm run dev -w @agar/server",
    "dev:client": "npm run dev -w @agar/client",
    "dev:game": "npm run dev -w @agar/game-server",
    "start:server": "npm run start -w @agar/server",
    "start:game": "npm run start -w @agar/game-server",
    "test": "npm run test --workspaces",
    "db:migrate": "npm run db:migrate -w @agar/server",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
